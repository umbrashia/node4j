{
  "name": "node4j",
  "version": "1.0.4",
  "description": "Node4J lets Node.js apps access Java objects in a JVM as if they were native. Java methods and collections are usable with familiar JavaScript syntax. It also supports callbacks, allowing Java code to invoke Node.js functions for seamless two-way integration.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "ts-node src/example/main.ts"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrashia/node4j.git"
  },
  "keywords": [
    "node",
    "java",
    "node-java",
    "bridge",
    "jvm",
    "py4j",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umbrashia/node4j/issues"
  },
  "homepage": "https://github.com/umbrashia/node4j#readme",
  "devDependencies": {
    "@types/node": "^24.9.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
